<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".MainActivity">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/textView"
                android:onClick="TimesOfIndia"
                android:padding="10dp"
                android:text="Times of India"
                style="@style/TextViewStyle" />

            <TextView
                android:id="@+id/textView2"
                android:text="CBC News"
                android:onClick="CBCNews"
                style="@style/TextViewStyle" />

            <TextView
                android:id="@+id/textView3"
                android:text="NDTV News"
                android:onClick="NDTVNews"
                style="@style/TextViewStyle" />

            <TextView
                android:id="@+id/textView4"
                style="@style/TextViewStyle"
                android:text="Financial Times"
                android:onClick="FinancialTimes"/>

            <TextView
                android:id="@+id/textView5"
                android:text="The Hindu"
                android:onClick="TheHindu"
                style="@style/TextViewStyle"/>

            <TextView
                android:id="@+id/textView6"
                android:text="Hindustan Times"
                android:onClick="HindustanTimes"
                style="@style/TextViewStyle"/>

            <TextView
                android:id="@+id/textView7"
                android:text="News 18"
                android:onClick="News18"
                style="@style/TextViewStyle"/>

            <TextView
                android:id="@+id/textView8"
                android:text="BuzzFeed"
                android:onClick="Buzzfeed"
                style="@style/TextViewStyle"/>

            <TextView
                android:id="@+id/textView9"
                android:text="Fox News"
                android:onClick="FoxNews"
                style="@style/TextViewStyle"/>

            <TextView
                android:id="@+id/textView10"
                android:text="NBC News"
                android:onClick="NBCNews"
                style="@style/TextViewStyle"/>

        </LinearLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BBD4E3" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="100dp"
        android:visibility="invisible" />
    </RelativeLayout>
</LinearLayout>